
<%= simple_form_for(@event) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :theme, autofocus: true, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
    </div>
  </div>


  <div class="field">
    <div class="control">
      <%= f.input :venue, input_html: {class: "input"}, wrapper: false, label_html: {class: "label"} %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.input :details, input_html: {class: "textarea"}, wrapper: false, label_html: {class: "label"} %>
    </div>
  </div>


  <div class="field">
    <div class="control" id="fcontrol">
      <span>
        <%= f.label :'Start date' %><br />
        <%= f.date_field :event_start_date, input_html: {class: "input"}, wrapper: false, label_html: {class: 'label'} %>
      </span>
      <span>
        <%= f.label :'End date' %><br />
        <%= f.date_field :event_end_date, input_html: {class: "inpu"}, wrapper: false, label_html: {class: 'label'} %>
      </span>
    </div>
  </div>

  <div class="field">
    <div class="control" id="fcontrol">
      <span>
        <%= f.label :'Start time' %><br />
        <%= f.time_field :event_start_time, input_html: {class: "input"} %>
      </span>
      <span class="time-field">
        <%= f.label :'End time' %><br />
        <%= f.time_field :event_end_time, input_html: {class: "input"} %>
      </span>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.button :submit, class: "button is-success is-outlined" %>
    </div>
  </div>
<% end %>
