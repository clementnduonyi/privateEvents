<!DOCTYPE html>
<html>
  <head>
    <title>PrivateEvents</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-primary global-notification">
        <%= notice %>
      </div>
    <% end %>

    <% if flash[:alert] %>
      <div class="notification is-primary global-notification">
        <%= alert %>
      </div>
    <% end %>

    <nav class="navbar is-white ">
      <div class="navbar-brand is-white">
        <h1 class="title is-5">PrivateEvents</h1>
      </div>

      <div class="navbar-end is-mobile">
        <div class="navbar-burger burger" data-target="navbarExample">
          <span></span>
          <span></span>
          <span></span>
          <span></span>
          <span></span>
      </div>

      <div id="navbarExample" class="navbar-menu">
        <%= link_to "Home", root_path, class: "button is-white" %>
        <% if user_signed_in? %>
          <%= link_to "My events", user_path(current_user.id), class: "button is-white" %>
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "button is-warning" %>
          <%= link_to "Creat new event", new_event_path, class: "button is-white" %>
        <% end %>
        
        <% unless user_signed_in? %>
          <%= link_to "Sign In", new_user_session_path, class: "button is-white" %>
          <%= link_to "Sign Up", new_user_registration_path, class: "button is-white" %>
        <% end %>
        
      </div>
    </nav>
    <%= yield %>
  </body>
</html>
